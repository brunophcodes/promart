<div class="container-md">
  <div class="d-flex mt-5" style="width:100%">
    <div class="row">
    <% @products.each do |product| %>
      <div class="card m-2 rounded-card px-0 shadow" style="width: 18rem;">
        <%= cl_image_tag product.photo.key, height: 300, width: 280, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title">Producto: <%= product.name %></h5>
          <p class="card-text">Precio por unidad de: <%= number_to_currency(product.price) %></p>
          <p>Descripci√≥n: <%= product.description %></p>
          <div class="input-group">
            <div class="input-group-btn">
              <button id="down" class="btn btn-default" onclick=" down('0')"><span class="glyphicon glyphicon-minus"></span></button>
            </div>
            <input type="text" id="myNumber" class="form-control input-number" value="1" />
            <div class="input-group-btn">
              <button id="up" class="btn btn-default" onclick="up('10')"><span class="glyphicon glyphicon-plus"></span></button>
            </div>
          </div>
          <p>
            <%= link_to "Edit", edit_product_path(product) %> |
            <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
            <%= button_to "Agregar al carrito", order_items_path(product_id: product.id), :class =>'btn btn-primary mx-auto px-5 align-center ', :style => "width:100%" %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <%= link_to "New product", new_product_path %>
</div>
